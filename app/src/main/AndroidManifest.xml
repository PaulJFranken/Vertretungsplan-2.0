<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.frankensterzenbach.paulfranken.myapplication">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.frankensterzenbach.paulfranken.myapplication.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.frankensterzenbach.paulfranken.myapplication.neueStunde_java"
            android:label="@string/title_activity_neue_stunde_java"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.frankensterzenbach.paulfranken.myapplication.Klausurplan"
            android:label="@string/title_activity_klausurplan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.frankensterzenbach.paulfranken.myapplication.Einstellungen"
            android:label="@string/title_activity_einstellungen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.frankensterzenbach.paulfranken.myapplication.Stunde_info"
            android:label="@string/title_activity_stunde__bearbeiten"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.frankensterzenbach.paulfranken.myapplication.Stunde_bearbeiten"
            android:label="@string/title_activity_stunde__bearbeiten"
            android:screenOrientation="portrait" />
        <activity android:name="com.frankensterzenbach.paulfranken.myapplication.SendMailActivity" />

        <receiver
            android:name="com.frankensterzenbach.paulfranken.myapplication.WidgetProvider"
            android:exported="false"
            android:icon="@color/colorPrimaryDark"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.color.appwidget.list.UPDATE_LIST" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider" />
        </receiver>

        <service
            android:name="com.frankensterzenbach.paulfranken.myapplication.WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name="com.frankensterzenbach.paulfranken.myapplication.StundenSetzen"
            android:label="@string/title_activity_stunden_setzen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.frankensterzenbach.paulfranken.myapplication.Test"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>